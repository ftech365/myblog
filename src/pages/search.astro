---
import Base from '../layouts/Base.astro';
---

<Base title="検索" description="記事を検索する">
  <div class="search-page">
    <div class="search-header">
      <p class="label">// SEARCH</p>
      <h1>記事を<span>検索</span></h1>
    </div>

    <div id="search"></div>
  </div>
</Base>

<link rel="stylesheet" href="/pagefind/pagefind-ui.css" is:inline />
<script src="/pagefind/pagefind-ui.js" is:inline></script>
<script>
  window.addEventListener('load', () => {
    // @ts-ignore
    new PagefindUI({
      element: '#search',
      showSubResults: true,
      translations: {
        placeholder: 'キーワードを入力...',
        zero_results: '「[QUERY]」に一致する記事が見つかりませんでした',
      },
    });
  });
</script>

<style>
  .search-page {
    max-width: 800px;
    margin: 0 auto;
    padding: 60px 40px 80px;
  }

  .search-header { margin-bottom: 48px; }

  .label {
    font-family: var(--font-mono);
    font-size: 11px;
    color: var(--text-muted);
    letter-spacing: 2px;
    margin-bottom: 8px;
  }

  h1 {
    font-family: var(--font-display);
    font-size: clamp(48px, 8vw, 72px);
    letter-spacing: 3px;
    line-height: 1;
  }
  h1 span { color: var(--accent); text-shadow: 0 0 30px rgba(0,229,255,0.4); }

  @media (max-width: 768px) {
    .search-page { padding: 40px 20px; }
  }
</style>
